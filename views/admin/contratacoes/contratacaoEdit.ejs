<%- include('../../partials/admin/header.ejs') %>
<main class="principal container">
  <hgroup>
    <h2>Atualizar</h2>
    <h3>Atualizar contratação</h3>
  </hgroup>
  <hr class="horizontal-bar">
  <form class="form-cadastro" method="POST" action="/admin/contratacao/salvarCadastrada">
    <input type="hidden" name="iptId" value="<%= contratacao.id %>">

    <label>Data:</label>
    <input type="date" name="iptData" class="br-7" value="<%= contratacao.data %>">

    <label>Contratante:</label>
    <select name="iptContratante" class="br-7">
      <% table_clientes.forEach(cliente => { %>
        <% if (cliente.clienteId == contratacao.cliente_id) { %>
          <option value="<%= cliente.id %>" selected><%= cliente.nome %></option>
        <% } else { %>
          <option value="<%= cliente.id %>"><%= cliente.nome %></option>
        <% } %>
      <% }) %>
    </select>

    <label>Serviço:</label>
    <select name="iptServico" class="br-7">
      <% table_servicos.forEach(servico => { %>
        <% if (servico.servicoId == contratacao.servico_id) { %>
          <option value="<%= servico.id %>" selected><%= servico.servico %></option>
        <% } else { %>
          <option value="<%= servico.id %>"><%= servico.servico %></option>
        <% } %>
      <% }) %>
    </select>

    <label>Contrato assinado:</label>
    <input type="file" name="iptContrato" class="br-7">

    <button type="submit" class="btn btn-edit btn-right">Atualizar</button>
  </form>
</main>
<%- include('../../partials/admin/footer.ejs') %>